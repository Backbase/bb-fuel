<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.backbase.testing</groupId>
    <artifactId>dataloader</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <slf4j-simple.version>1.7.25</slf4j-simple.version>
        <rest-assured.version>3.0.3</rest-assured.version>
        <jackson-databind.version>2.9.0</jackson-databind.version>
        <commons-configuration.version>1.10</commons-configuration.version>
        <javafaker.version>0.13</javafaker.version>
        <iban4j.version>3.2.1</iban4j.version>
        <junit.version>4.12</junit.version>
        <maven-assembly-plugin.version>2.4.1</maven-assembly-plugin.version>
        <user-presentation-spec.version>1.10.3</user-presentation-spec.version>
        <user-integration-spec.version>1.10.2</user-integration-spec.version>
        <accessgroup-presentation-spec.version>1.10.5</accessgroup-presentation-spec.version>
        <accessgroup-integration-spec.version>1.10.2</accessgroup-integration-spec.version>
        <product-summary-presentation-spec.version>1.11.4</product-summary-presentation-spec.version>
        <product-integration-spec.version>1.8.0</product-integration-spec.version>
        <arrangement-integration-spec.version>1.11.2</arrangement-integration-spec.version>
        <transaction-integration-external-inbound-spec.version>1.10.2</transaction-integration-external-inbound-spec.version>
        <legalentity-presentation-spec.version>1.10.8</legalentity-presentation-spec.version>
        <notifications-presentation-spec.version>1.8.5</notifications-presentation-spec.version>
        <contact-presentation-spec.version>3.1.3</contact-presentation-spec.version>
        <payment-order-presentation-spec.version>1.11.4</payment-order-presentation-spec.version>
        <actionrecipes-presentation-spec.version>2.0.38</actionrecipes-presentation-spec.version>
        <messages-presentation-spec.version>9.0.1</messages-presentation-spec.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <version>${rest-assured.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson-databind.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
            <version>${commons-configuration.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${slf4j-simple.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.javafaker</groupId>
            <artifactId>javafaker</artifactId>
            <version>${javafaker.version}</version>
        </dependency>
        <dependency>
            <groupId>org.iban4j</groupId>
            <artifactId>iban4j</artifactId>
            <version>${iban4j.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <!-- entitlements specs -->
        <dependency>
            <groupId>com.backbase.dbs.user</groupId>
            <artifactId>user-presentation-spec</artifactId>
            <version>${user-presentation-spec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.user</groupId>
            <artifactId>user-integration-spec</artifactId>
            <version>${user-integration-spec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.accessgroup</groupId>
            <artifactId>accessgroup-presentation-spec</artifactId>
            <version>${accessgroup-presentation-spec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.accessgroup</groupId>
            <artifactId>accessgroup-integration-spec</artifactId>
            <version>${accessgroup-integration-spec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.legalentity</groupId>
            <artifactId>legalentity-presentation-spec</artifactId>
            <version>${legalentity-presentation-spec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.legalentity</groupId>
            <artifactId>legalentity-integration-spec</artifactId>
            <version>${accessgroup-presentation-spec.version}</version>
        </dependency>
        <!-- productsummary specs -->
        <dependency>
            <groupId>com.backbase.dbs.productsummary</groupId>
            <artifactId>product-summary-presentation-spec</artifactId>
            <version>${product-summary-presentation-spec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.product</groupId>
            <artifactId>product-integration-spec</artifactId>
            <version>${product-integration-spec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.arrangement</groupId>
            <artifactId>arrangement-integration-spec</artifactId>
            <version>${arrangement-integration-spec.version}</version>
        </dependency>
        <!-- transactions specs -->
        <dependency>
            <groupId>com.backbase.dbs.transaction</groupId>
            <artifactId>transaction-integration-external-inbound-spec</artifactId>
            <version>${transaction-integration-external-inbound-spec.version}</version>
        </dependency>
        <!-- notifications specs -->
        <dependency>
            <groupId>com.backbase.dbs.notifications</groupId>
            <artifactId>notifications-presentation-spec</artifactId>
            <version>${notifications-presentation-spec.version}</version>
        </dependency>
        <!-- contact specs -->
        <dependency>
            <groupId>com.backbase.dbs.contact</groupId>
            <artifactId>contact-presentation-spec</artifactId>
            <version>${contact-presentation-spec.version}</version>
        </dependency>
        <!-- payment specs -->
        <dependency>
            <groupId>com.backbase.dbs.paymentorder</groupId>
            <artifactId>payment-order-presentation-spec</artifactId>
            <version>${payment-order-presentation-spec.version}</version>
        </dependency>
        <!-- messages specs -->
        <dependency>
            <groupId>com.backbase.dbs.messages</groupId>
            <artifactId>messages-presentation-spec</artifactId>
            <version>${messages-presentation-spec.version}</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>dataloader</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>${maven-assembly-plugin.version}</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>com.backbase.testing.dataloader.Runner</mainClass>
                        </manifest>
                    </archive>

                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>