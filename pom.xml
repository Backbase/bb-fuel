<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>service-sdk-starter-core</artifactId>
        <groupId>com.backbase.buildingblocks</groupId>
        <version>10.3.0</version>
    </parent>

    <groupId>com.backbase.ct</groupId>
    <artifactId>bb-fuel</artifactId>
    <version>2.6.37-SNAPSHOT</version>
    <name>Backbase :: Capability Testing :: bb-fuel</name>

    <scm>
        <connection>scm:git:https://github.com/backbase/bb-fuel.git</connection>
        <developerConnection>scm:git:https://github.com/backbase/bb-fuel.git</developerConnection>
        <tag>HEAD</tag>
        <url>https://github.com/backbase/bb-fuel</url>
    </scm>

    <properties>
        <mainClass>com.backbase.ct.bbfuel.BbFuelApplication</mainClass>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven-assembly-plugin.version>2.4.1</maven-assembly-plugin.version>
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>

        <junit.version>4.13.1</junit.version>

        <commons-configuration.version>1.10</commons-configuration.version>
        <commons-collections.version>4.4</commons-collections.version>

        <rest-assured.version>3.3.0</rest-assured.version>
        <groovy.version>2.5.12</groovy.version>
        <guava.version>29.0-jre</guava.version>

        <api.target>${project.build.directory}/downloaded-api</api.target>
        <openapi-generator-version>4.2.3-backbase</openapi-generator-version>
        <jackson-databind.version>2.8.11</jackson-databind.version>
        <jackson-databind-nullable-version>0.2.0</jackson-databind-nullable-version>
        <swagger-annotations-version>1.6.0</swagger-annotations-version>
        <jsr305-version>3.0.0</jsr305-version>

        <javafaker.version>1.0.2</javafaker.version>
        <iban4j.version>3.2.1</iban4j.version>

        <service-sdk.version>11.0.0</service-sdk.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.backbase.dbs</groupId>
                <artifactId>banking-services-bom</artifactId>
                <version>2.19.3</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>building-blocks-common</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>internal-jwt</artifactId>
                    <groupId>com.backbase.buildingblocks</groupId>
                </exclusion>
                <exclusion>
                    <groupId>ch.qos.logback</groupId>
                    <artifactId>logback-classic</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.backbase.buildingblocks</groupId>
            <artifactId>service-sdk-starter-security</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>internal-jwt</artifactId>
                    <groupId>com.backbase.buildingblocks</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <!-- DBS Specs -->
        <!-- Access control -->
        <dependency>
            <groupId>com.backbase.dbs.accessgroup</groupId>
            <artifactId>accessgroup-integration-spec</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.accesscontrol</groupId>
            <artifactId>access-control-spec</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.legalentity</groupId>
            <artifactId>legalentity-integration-spec</artifactId>
        </dependency>
        <!-- Action service -->
        <dependency>
            <groupId>com.backbase.dbs.actions</groupId>
            <artifactId>action-spec</artifactId>
        </dependency>
        <!-- Approvals -->
        <dependency>
            <groupId>com.backbase.dbs.approval</groupId>
            <artifactId>approval-integration-spec</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-simple</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!-- Arrangement Manager -->
        <dependency>
            <groupId>com.backbase.dbs.arrangement</groupId>
            <artifactId>arrangement-integration-spec</artifactId>
        </dependency>
        <!-- Billpay -->
        <dependency>
            <groupId>com.backbase.dbs.billpay</groupId>
            <artifactId>billpay-integration-external-provider-outbound-spec</artifactId>
        </dependency>
        <!-- Contact Manager -->
        <dependency>
            <groupId>com.backbase.dbs.contact</groupId>
            <artifactId>contact-integration-external-inbound-spec</artifactId>
        </dependency>
        <!-- Limits -->
        <dependency>
            <groupId>com.backbase.dbs.limit</groupId>
            <artifactId>limit-spec</artifactId>
        </dependency>
        <!-- Transaction Manager -->
        <dependency>
            <groupId>com.backbase.dbs.transaction</groupId>
            <artifactId>transaction-integration-external-inbound-spec</artifactId>
        </dependency>
        <!-- Transaction Manager Category Collector -->
        <dependency>
            <groupId>com.backbase.dbs.pfm</groupId>
            <artifactId>categories-management-presentation-spec</artifactId>
        </dependency>
        <!-- User manager -->
        <dependency>
            <groupId>com.backbase.dbs.user</groupId>
            <artifactId>user-manager-spec</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.user</groupId>
            <artifactId>user-integration-external-outbound-spec</artifactId>
        </dependency>
        <!-- Generic dependencies -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
            <version>${commons-collections.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
            <version>${commons-configuration.version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy</artifactId>
            <version>${groovy.version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-xml</artifactId>
            <version>${groovy.version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>${guava.version}</version>
        </dependency>
        <dependency>
            <groupId>org.iban4j</groupId>
            <artifactId>iban4j</artifactId>
            <version>${iban4j.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.javafaker</groupId>
            <artifactId>javafaker</artifactId>
            <version>${javafaker.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <version>${rest-assured.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- OpenAPI code generator dependencies -->
        <dependency>
            <groupId>io.swagger</groupId>
            <artifactId>swagger-annotations</artifactId>
            <version>${swagger-annotations-version}</version>
        </dependency>
        <dependency>
            <groupId>org.openapitools</groupId>
            <artifactId>jackson-databind-nullable</artifactId>
            <version>${jackson-databind-nullable-version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <version>${jsr305-version}</version>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>wagon-maven-plugin</artifactId>
                    <version>2.0.0</version>
                    <configuration>
                        <toDir>${api.target}</toDir>
                        <serverId>Backbase Artifactory Repository</serverId>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.1.2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <!--to be imported on other projects-->
                            <classifier>import</classifier>
                            <excludes>
                                <exclude>data/</exclude>
                                <exclude>*.yml</exclude>
                                <exclude>data.properties</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven-release-plugin.version}</version>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>${mainClass}</mainClass>
                    <layout>JAR</layout>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>build-info</goal>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <classifier>boot</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-spec-dependencies</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <includes>**/*.raml,**/*.json,**/*.md,**/*.csv</includes>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.backbase.dbs.accesscontrol</groupId>
                                    <artifactId>access-control-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/access-control-spec
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.backbase.dbs.account</groupId>
                                    <artifactId>account-integration-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/account-integration-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.actions</groupId>
                                    <artifactId>action-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/action-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.approval</groupId>
                                    <artifactId>approval-integration-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/approval-integration-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.arrangement</groupId>
                                    <artifactId>arrangement-integration-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/arrangement-integration-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.billpay</groupId>
                                    <artifactId>billpay-integration-external-provider-outbound-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/billpay-integration-external-provider-outbound-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.contact</groupId>
                                    <artifactId>contact-integration-external-inbound-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/contact-integration-external-inbound-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.messages</groupId>
                                    <artifactId>messages-service-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/messages-service-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.notifications</groupId>
                                    <artifactId>notifications-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/notifications-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.productsummary</groupId>
                                    <artifactId>product-summary-presentation-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/product-summary-presentation-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.paymentorder</groupId>
                                    <artifactId>payment-order-presentation-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/payment-order-presentation-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.user</groupId>
                                    <artifactId>user-manager-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/user-manager-spec
                                    </outputDirectory>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>com.backbase.dbs.transaction</groupId>
                                    <artifactId>transaction-integration-external-inbound-spec</artifactId>
                                    <outputDirectory>
                                        ${project.build.directory}/transaction-integration-external-inbound-spec
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.backbase.codegen</groupId>
                <artifactId>raml-api-maven-plugin-1-0</artifactId>
                <version>${service-sdk.version}</version>
                <configuration>
                    <outputFile>target/generated-sources</outputFile>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-access-control-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>access-control-spec</serviceId>
                            <packageName>dbs.accesscontrol</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/access-control-spec/accessgroup-presentation-spec/api.raml
                                </inputFile>
                                <inputFile>
                                    ${project.build.directory}/access-control-spec/legalentity-presentation-spec/api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-account-integration-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>account-integration-service</serviceId>
                            <packageName>dbs.account</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/account-integration-spec/service-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-actionrecipes-presentation-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>actionrecipes-presentation-spec</serviceId>
                            <packageName>dbs.actions</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/action-spec/service-api.raml
                                </inputFile>
                                <inputFile>
                                    ${project.build.directory}/action-spec/api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-approval-integration-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>approval-service</serviceId>
                            <packageName>dbs.approval.integration</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/approval-integration-spec/client-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-arrangement-integration-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>arrangement-service</serviceId>
                            <packageName>dbs.arrangement.integration</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/arrangement-integration-spec/integration-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-contact-manager-integration-external-inbound-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>contact-manager-service</serviceId>
                            <packageName>dbs.productsummary.presentation</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/contact-integration-external-inbound-spec/integration-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-messages-service-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>messages-service-spec</serviceId>
                            <packageName>dbs.messages</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/messages-service-spec/service-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-notifications-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>notifications-spec</serviceId>
                            <packageName>dbs.notifications</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/notifications-spec/service-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-product-summary-presentation-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>productsummary-service</serviceId>
                            <packageName>dbs.productsummary.presentation</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/product-summary-presentation-spec/service-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-transaction-integration-external-inbound-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>transaction-service</serviceId>
                            <packageName>dbs.transaction.integration</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/transaction-integration-external-inbound-spec/integration-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-user-manager-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>user-manager-spec</serviceId>
                            <packageName>dbs.user</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/user-manager-spec/service-api.raml
                                </inputFile>
                                <inputFile>
                                    ${project.build.directory}/user-manager-spec/client-api.raml
                                </inputFile>
                                <inputFile>
                                    ${project.build.directory}/user-manager-spec/integration-api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>

                    <execution>
                        <id>generate-payment-order-presentation-spec</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>raml-api-generator</goal>
                        </goals>
                        <configuration>
                            <serviceId>payment-order-presentation-spec</serviceId>
                            <packageName>dbs.payments</packageName>
                            <inputFiles>
                                <inputFile>
                                    ${project.build.directory}/payment-order-presentation-spec/service-api.raml
                                </inputFile>
                                <inputFile>
                                    ${project.build.directory}/payment-order-presentation-spec/api.raml
                                </inputFile>
                            </inputFiles>
                            <requestHeaders>false</requestHeaders>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
