<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.backbase.testing</groupId>
    <artifactId>dataloader</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <version>3.0.3</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.9.0</version>
        </dependency>
        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
            <version>1.10</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>1.7.25</version>
        </dependency>
        <dependency>
            <groupId>com.github.javafaker</groupId>
            <artifactId>javafaker</artifactId>
            <version>0.13</version>
        </dependency>
        <dependency>
            <groupId>org.iban4j</groupId>
            <artifactId>iban4j</artifactId>
            <version>3.2.1</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <!-- entitlements specs -->
        <dependency>
            <groupId>com.backbase.dbs.user</groupId>
            <artifactId>user-presentation-spec</artifactId>
            <version>1.8.9</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.user</groupId>
            <artifactId>user-integration-spec</artifactId>
            <version>1.8.2</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.accessgroup</groupId>
            <artifactId>accessgroup-presentation-spec</artifactId>
            <version>1.8.13</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.accessgroup</groupId>
            <artifactId>accessgroup-integration-spec</artifactId>
            <version>1.8.7</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.legalentity</groupId>
            <artifactId>legalentity-presentation-spec</artifactId>
            <version>1.8.1</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.legalentity</groupId>
            <artifactId>legalentity-integration-spec</artifactId>
            <version>1.8.1</version>
        </dependency>
        <!-- productsummary specs -->
        <dependency>
            <groupId>com.backbase.dbs.productsummary</groupId>
            <artifactId>product-summary-presentation-spec</artifactId>
            <version>1.7.13</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.product</groupId>
            <artifactId>product-integration-spec</artifactId>
            <version>1.7.3</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.dbs.arrangement</groupId>
            <artifactId>arrangement-integration-spec</artifactId>
            <version>1.7.11</version>
        </dependency>
        <!-- transactions specs -->
        <dependency>
            <groupId>com.backbase.dbs.transaction</groupId>
            <artifactId>transaction-integration-external-inbound-spec</artifactId>
            <version>1.7.4</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>dataloader</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>com.backbase.testing.dataloader.Runner</mainClass>
                        </manifest>
                    </archive>

                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>Backbase Artifactory Repository</id>
            <url>https://artifacts.backbase.com/repo</url>
            <releases>
                <updatePolicy>always</updatePolicy>
            </releases>
        </repository>
    </repositories>

</project>