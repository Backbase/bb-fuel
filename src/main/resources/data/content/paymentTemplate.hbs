<html lang="en">

<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Proof of Payment</title>
  <style>
    body {
      font-family: sans-serif;
      font-style: normal;
      font-weight: normal;
      font-size: 16px;
      line-height: 24px;
      color: rgb(0, 0, 0);
      margin: 15px 15px;
    }

    .header-logo {
      position: fixed;
      height: auto;
      width: 100px;
    }

    .header-info {
      position: fixed;
      font-weight: bold;
      font-size: 24px;
      line-height: 34px;
      height: 50px;
      top: 100px;
      color: #000000;
    }

    .detail-info {
      position: fixed;
      width: 620px;
      height: 89px;
      top: 200px;
      color: #616161;
    }

    .table {
      position: fixed;
      border-spacing:0 20px;
      top: 340px;
      padding: 12px;
    }

    .table-header {
      position: fixed;
      padding: 15px;
      width: 630px;
      top: 300px;
      background: #F5F5F5;
      border-radius: 8px;
      color: #616161;
      font-weight: bold;
      text-align: left;
    }

    .field-header {
      position: relative;
      width: 200px;
      left: 12px;
      color: #616161;
      vertical-align: top;
    }

    .field-header-subtext {
      font-size: smaller;
    }

    .field-info {
      display:block;
      width: 440px;
      left: 50px;
      color: #000000;
      word-wrap: break-word;
      vertical-align: top;
      text-align: justify;
    }

    .date-of-export {
      position: fixed;
      width: 250px;
      height: 50px;
      left: 410px;
      top: 100px;
      font-size: 14px;
      line-height: 21px;
      text-align: right;
      color: #616161;
    }

    .date-of-export-info {
      color: #000000;
      text-align: right;
      font-weight: bold;
      margin-right: 3px
    }

    .footer {
      position: fixed;
      width: 620px;
      height: 72px;
      top: 1000px;
      font-size: 12px;
      line-height: 18px;
      color: #616161;
    }
  </style>
</head>

<body>
<img class="header-logo" src="data:image/png;base64," alt="BACKBASE"/>
<span class="header-info">Payment Confirmation</span>

<div class="date-of-export">
  <span>Date of export</span>
  <br/>
  <span class="date-of-export-info">
    <span>{{currentTimestamp date_pattern="MMMM dd, yyyy" timezone="Europe/Amsterdam"}}</span>
    <br/>
    <span>{{currentTimestamp date_pattern="hh:mm:ss a z" timezone="Europe/Amsterdam"}}</span>
  </span>
</div>
<div class="detail-info">
  <span>To whom it may concern, </span>
  <br/><br/>
  <span>Backbase confirms the below payment.</span>
</div>
<div>
  <div>
    <span class="table-header">Payment Details</span>
  </div>
  <table class="table">
    <tr>
      <td class="field-header">Payment from</td>
      <td class="field-info">
        <span>{{paymentOrder.originator.name}}</span>
        <br/>
        {{#if (eq (stringFormat paymentOrder.originatorAccount.identification.schemeName) "IBAN")}}
          <span>{{formatIBAN paymentOrder.originatorAccount.identification.identification}}</span>
        {{else}}
          <span>{{paymentOrder.originatorAccount.identification.identification}}</span>
        {{/if}}
      </td>
    </tr>

    <tr>
      <td class="field-header">Payment to</td>
      <td class="field-info">
        <span>{{paymentOrder.transferTransactionInformation.counterparty.name}}</span>
        <br/>
        {{#if (eq (stringFormat paymentOrder.transferTransactionInformation.counterpartyAccount.identification.schemeName) "IBAN")}}
          <span>{{formatIBAN paymentOrder.transferTransactionInformation.counterpartyAccount.identification.identification}}</span>
        {{else}}
          <span>{{paymentOrder.transferTransactionInformation.counterpartyAccount.identification.identification}}</span>
        {{/if}}
      </td>
    </tr>

    {{#if (or (eq paymentOrder.paymentType "US_DOMESTIC_WIRE")
              (eq paymentOrder.paymentType "US_DOMESTIC_WIRE_ILE")
              (eq paymentOrder.paymentType "ACH_CREDIT"))
    }}
      <tr>
        <td class="field-header">Routing transit number</td>
        <td class="field-info">{{paymentOrder.transferTransactionInformation.counterpartyBank.bankBranchCode}}</td>
      </tr>
    {{/if}}

    {{#if (eq paymentOrder.paymentType "INTERNATIONAL_TRANSFER")}}
      <tr>
        <td class="field-header">Bank branch code</td>
        <td class="field-info">{{paymentOrder.transferTransactionInformation.counterpartyBank.bankBranchCode}}</td>
      </tr>
      <tr>
        <td class="field-header">SWIFT/BIC</td>
        <td class="field-info">{{paymentOrder.transferTransactionInformation.counterpartyBank.bic}}</td>
      </tr>
    {{/if}}

    <tr>
      <td class="field-header">Amount</td>
      <td class="field-info">
        {{formatCurrencyCode paymentOrder.transferTransactionInformation.instructedAmount.currencyCode currency_style="CODE" locale="en_US"}}
        {{formatAmount paymentOrder.transferTransactionInformation.instructedAmount.amount locale="en_US"}}
      </td>
    </tr>

    <tr>
      <td class="field-header">
        <span>Execution date</span>
        <br/>
        <span class="field-header-subtext">(Requested)</span>
      </td>
      <td class="field-info">{{formatDate paymentOrder.requestedExecutionDate date_pattern="MMM dd, yyyy"}}</td>
    </tr>

    {{#if paymentOrder.transferTransactionInformation.remittanceInformation.content}}
      <tr>
        <td class="field-header">Description</td>
        <td class="field-info">{{paymentOrder.transferTransactionInformation.remittanceInformation.content}}</td>
      </tr>
    {{/if}}

    <tr>
      <td class="field-header">Type</td>
      {{#if (or (eq paymentOrder.paymentType "SEPA_CREDIT_TRANSFER")
                (eq paymentOrder.paymentType "SEPA_CT_ILE")
                (eq paymentOrder.paymentType "SEPA_CT_CLOSED"))
      }}
        <td class="field-info">SEPA payment</td>
      {{else if (eq paymentOrder.paymentType "ACH_CREDIT") }}
        <td class="field-info">ACH payment</td>
      {{else if (or (eq paymentOrder.paymentType "US_DOMESTIC_WIRE")
          (eq paymentOrder.paymentType "US_DOMESTIC_WIRE_ILE"))
      }}
        <td class="field-info">Wire payment</td>
      {{else if (eq paymentOrder.paymentType "INTERNATIONAL_TRANSFER") }}
        <td class="field-info">International payment</td>
      {{else}}
        <td class="field-info">{{paymentOrder.paymentType}}</td>
      {{/if}}
    </tr>
  </table>
  <div>
      <span class="footer">
        Backbase - Become the Bank that People Love https://www.backbase.com
      </span>
  </div>
</div>
</body>
</html>
